// This tells Prisma we are using Postgres
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Define a User
model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  todos    Todo[]
}

// Define a Todo
model Todo {
  id        Int     @id @default(autoincrement())
  task      String
  completed Boolean @default(false)
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}